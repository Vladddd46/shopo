generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String
  createdAt   DateTime @default(now())
  updatedArAt DateTime @updatedAt

 @@map("users")
}

model Product {
  id             Int              @id @default(autoincrement())
  name           String?
  calories       Int?
  carbohydrates  Decimal?
  protein        Decimal?
  fat            Decimal?
  sugar          Decimal?
  fiber          Decimal?
  packaging      Int?
  ProductsOnDish ProductsOnDish[]

  @@map("products")
}

model Dish {
  id       Int              @id @default(autoincrement())
  name     String           @unique
  products ProductsOnDish[]

  @@map("dishes")
}

model ProductsOnDish {
  dish      Dish    @relation(fields: [dishId], references: [id], onDelete: Cascade)
  dishId    Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId Int

  @@id([dishId, productId])
}
